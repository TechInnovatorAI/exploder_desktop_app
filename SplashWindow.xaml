<Window x:Class="Exploder.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="800">
    
    <Border Width="1200" Height="800" Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Name="SlideshowGrid" Grid.Row="0">
                <Grid Name="ImageContainer">
                    <Image Name="SlideImage"
               Stretch="UniformToFill"
               Opacity="0"
               Loaded="SlideImage_Loaded"
               SizeChanged="SlideImage_SizeChanged"/>
                </Grid>
            </Grid>

            <TextBlock Text="Welcome to Exploder"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10"
                       Grid.Row="1"/>

            <ProgressBar Name="LoadingBar"
                         Grid.Row="2"
                         Margin="20"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         IsIndeterminate="False"/>
        </Grid>
    </Border>
</Window>
