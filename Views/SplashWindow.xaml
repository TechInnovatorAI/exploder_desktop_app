<Window x:Class="Exploder.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Width="700" Height="500">
    
    <Border Width="700" Height="500" Background="White" CornerRadius="15" BorderThickness="2" BorderBrush="LightBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Splash Image Display -->
                <Border Width="300" Height="200" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image x:Name="SplashImage"
                           Width="300" 
                           Height="200" 
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           Opacity="0"/>
                </Border>
                
                <TextBlock Text="Exploder" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="DarkBlue"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Interactive Documentation System" 
                           FontSize="16" 
                           Foreground="Gray"
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <TextBlock x:Name="StatusText"
                       Text="Initializing..."
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,10"
                       Foreground="#2C3E50"
                       Grid.Row="1"/>

            <ProgressBar Name="LoadingBar"
                         Grid.Row="2"
                         Margin="40,20"
                         Height="10"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         IsIndeterminate="False"
                         Background="#ECF0F1"
                         Foreground="#3498DB"/>
        </Grid>
    </Border>
</Window>
